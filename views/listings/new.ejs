<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <br>
                <h3>Create a New Listing</h3>
                <form method="POST" action="/listings" novalidate class="needs-validation"
                    enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input required type="text" name="listing[title]" placeholder="enter title"
                            class="form-control">
                        <div class="valid-feedback">Title looks good!</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea required name="listing[description]" class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input type="file" name="listing[image]" class="form-control" required>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input required name="listing[price]" class="form-control" placeholder="1200" type="number">
                            <div class="invalid-feedback">Please enter a valid price</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input required type="text" name="listing[country]" placeholder="India"
                                class="form-control">
                            <div class="invalid-feedback">Country name should be valid</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input required type="text" name="listing[location]" placeholder="Jaipur, India"
                            class="form-control">
                        <div class="invalid-feedback">Location name should be valid</div>
                    </div>
                    <br>
                    <button class="btn btn-dark add-btn mt-3">Add</button>

                </form>
            </div>
        </div>

    </body>